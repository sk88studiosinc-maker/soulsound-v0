<script>
const hashtagSets = {
  "TikTok": ["#tiktokmusic","#fyp","#newmusic","#indieartist","#artistsoftiktok","#musicproducer","#songwriter","#viral","#reels"],
  "Instagram": ["#newmusic","#indieartist","#musicproducer","#songwriter","#reels","#explorepage","#musicislife","#independentartist"],
  "YouTube": ["#newmusic","#music","#indieartist","#musicvideo","#originalmusic","#songwriter","#producer"],
  "PocketFM": ["#pocketfm","#webnovel","#fiction","#scifi","#storytime","#audiostory","#writers","#reading"],
  "X (Twitter)": ["#newmusic","#indieartist","#songwriter","#musicproducer","#nowplaying"]
};

function cleanKeywords(str){
  return str.split(",").map(s=>s.trim()).filter(Boolean).slice(0,6);
}

function generate(){
  const link = document.getElementById("link").value.trim();
  const platform = document.getElementById("platform").value;
  const vibe = document.getElementById("vibe").value;
  const project = document.getElementById("project").value;
  const cta = document.getElementById("cta").value;
  const kw = cleanKeywords(document.getElementById("keywords").value);

  const openerBank = {
    "Emotional / Spiritual": [
      "This one came from a real place.",
      "If you‚Äôve been carrying a lot, press play.",
      "A song for the part of you that‚Äôs still becoming."
    ],
    "Hype / Energy": [
      "Turn it up‚Äîthis one‚Äôs a MOVIE.",
      "Energy check ‚ö°Ô∏è let‚Äôs go.",
      "If you needed motivation, this is it."
    ],
    "Dark / Cinematic": [
      "Cinematic darkness‚Ä¶ but with purpose.",
      "A scene you can hear.",
      "If you like grit + atmosphere, you‚Äôll feel this."
    ],
    "Peaceful / Healing": [
      "Soft, healing energy‚Äîtake a breath.",
      "Let this reset your nervous system.",
      "Peace in sound form."
    ],
    "Funny / Playful": [
      "This one is pure fun üòÇ",
      "Don‚Äôt take it too serious‚Äîjust vibe.",
      "Okay but why is this stuck in my head?"
    ]
  };

  const projectLine = {
    "SoulSound (brand)": "SoulSound is my open-build universe: music + story + healing.",
    "SoulSound Beats": "SoulSound Beats: original sounds for artists, creators, and dreamers.",
    "SoulSound Kids": "SoulSound Kids: playful music for little hearts (and tired parents).",
    "My Song Release": "New release‚Äîfresh energy, real emotion.",
    "My PocketFM Series": "New chapter drop on PocketFM‚Äîsci-fi, power, and heart."
  };

  const opener = openerBank[vibe][Math.floor(Math.random()*openerBank[vibe].length)];
  const tags = Array.from(new Set([...(hashtagSets[platform]||[]), ...kw.map(k=>"#"+k.replace(/\s+/g,""))])).slice(0,18);

  let caption =
`${opener}
${projectLine[project]}
${cta}.

${link ? "üîó " + link : ""}

${tags.join(" ")}`;

  document.getElementById("output").textContent = caption.trim();
}

async function copyOut(){
  const text = document.getElementById("output").textContent.trim();
  if(!text) return alert("Generate first.");
  try{
    await navigator.clipboard.writeText(text);
    alert("Copied ‚úÖ");
  }catch(e){
    alert("Copy failed. Long-press to copy manually.");
  }
}
</script>
